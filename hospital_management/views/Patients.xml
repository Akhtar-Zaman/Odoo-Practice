<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--Tree view for the Patient Model-->
    <record id="hospital_patients_tree" model="ir.ui.view" >
        <field name="name">hospital.patients.tree</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="pat_name"/>               
                <field name="pat_email"/>                           
            </tree>
        </field>
    </record>


    <!--Form view for the Patient Model-->
    <record id="hospital_patients_form" model="ir.ui.view" >
        <field name="name">hospital.patients.form</field>
        <field name="model">hospital.patients</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <field name="pat_image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="pat_name" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="pat_mobile"/>               
                            <field name="pat_email"/>
                            <field name="pat_address"/>
                        </group>
                        <group>
                            <field name="pat_bill"/>
                            <field name="pat_discountBill"/>
                            <field name="pat_disease"/>
                        </group>
                        <group string="Appointments">
                            <field name="pat_doctor"/>
                            <field name="appointment_date"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Medicines">
                            <field name="pat_doctor"/>
                        </page>
                    </notebook>
                </sheet>
                <field name="pat_name"/>               
                <field name="pat_email"/>                           
            </form>
        </field>
    </record>




    <record id="action_hospital_patients" model="ir.actions.act_window" >
        <field name="name">patients</field>
        <field name="res_model">hospital.patients</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Create Your First Patient!</p>
        </field>
    </record>

    <menuitem id="patients_Manue" name="patients" parent="Hospital_Manue" sequence="15"/>
    <menuitem id="patients_Manue2" name="patients" action="action_hospital_patients" parent="patients_Manue" sequence="20"/>


    <!--Form view for the Patient Model-->
    <record id="patients_inherited_filter_form" model="ir.ui.view" >
        <field name="name">patients.filter.form</field>
        <field name="model">patients.filter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                    </group>    
                </sheet>
                <footer>
                    <button name="patients_filter" string="Ok" type="object" class="btn btn-primary"/>
                </footer>

            </form>
        </field>
    </record>


    <!--Action of the Menue -->
    <record id="patients_inherited_filter" model="ir.actions.act_window" >
        <field name="name">patients Filter</field>
        <field name="res_model">patients.filter</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
    <menuitem id="patients_SubMenue" name="patients Filtering" action="patients_inherited_filter" parent="patients_Manue" sequence="25"/>




</odoo>