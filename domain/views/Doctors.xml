<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <!--Tree view for the Doctors Model-->
    <record id="hospital_doctors_tree" model="ir.ui.view" >
        <field name="name">hospital.doctors.tree</field>
        <field name="model">hospital.doctors</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="doc_name"/>                                                                                   
            </tree>
        </field>
    </record>


    <record id="transient_form_action" model="ir.actions.act_window">
        <field name="name">transient.action</field>
        <field name="res_model">patient.filter</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>


    <!--Form view for the Doctors Model-->
    <record id="hospital_doctors_form" model="ir.ui.view" >
        <field name="name">hospital.doctors.form</field>
        <field name="model">hospital.doctors</field>
        <field name="arch" type="xml">
            <form string="Doctors">
                <sheet>
                <header>
                    <button string="Filter" name="%(transient_form_action)d" type="action" class="oe_highlight" context="{'default_doc_namee': active_id}"/>

                    <button string="Appointment" name="Patient_Appointments" type="object" class="oe_highlight"/>
                </header>
                    <group>
                        <group>
                            <field name="doc_name"/>                                          
                            <field name="doc_age"/>                                          
                            <field name="doc_category"/>
                            <field name="doc_patients"/>
                        </group>
                    </group>
                </sheet>                           
            </form>
        </field>
    </record>

    <record id="action_hospital_doctors" model="ir.actions.act_window" >
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctors</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
               Create Your First Doctor!</p>
        </field>
    </record>

    <menuitem id="Doctors_Manue" name="Doctors" sequence="15"/>
    <menuitem id="Doctors_Submanue" name="Doctors" action="action_hospital_doctors" parent="Doctors_Manue" sequence="16"/>
    




</odoo>